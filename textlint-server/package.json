    "prepublishOnly": "npm run clean && npm run compile",
    "watch": "tsc -watch -p ./"
  },
  "dependencies": {
    "glob": "^7.1.6",
    "vscode-languageserver": "^6.1.1",
    "vscode-languageserver-textdocument": "1.0.1",
    "vscode-uri": "2.1.2"
  },
  "devDependencies": {
    "@types/glob": "^7.1.3",
    "@types/node": "^14.0.27",
    "rimraf": "^3.0.2",
    "tslint": "^6.1.3",
    "typescript": "^3.9.7"
  },
  "engines": {
    "node": "*"
  },
  "publishConfig": {
    "access": "public"
  }
}